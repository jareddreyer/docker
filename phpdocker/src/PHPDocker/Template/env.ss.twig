SS_ENVIRONMENT_TYPE=dev
SS_DEFAULT_ADMIN_USERNAME=admin
SS_DEFAULT_ADMIN_PASSWORD=admin

# Edit your local HOST file [/private/etc/hosts]
SITE_URL=fenz.portal

# Other custom setting for Docker
TZ=Pacific/Auckland
WWW_HTTP_PORT={{basePort}}
WWW_HTTPS_PORT=443

SS_TEMP_PATH=silverstripe-cache
SS_ERROR_LOG=silverstripe.log

PHP_VERSION={{phpVersion}}

{% if hasMysql %}
# Database setup
SS_DATABASE_CLASS=MySQLDatabase
SS_DATABASE_SERVER={{projectName}}-mysql
SS_DATABASE_NAME={{databaseName}}
SS_DATABASE_ROOT_PASSWORD={{rootPassword}}
SS_DATABASE_USERNAME={{rootPassword}}
SS_DATABASE_PASSWORD={{rootPassword}}
SS_DATABASE_LOCAL_PORT=3306
{% endif %}

{% if hasMailhog %}
# Email setup
SS_SEND_ALL_EMAILS_TO=ss.testers@example.com
SS_SENDER_EMAIL=no-reply@example.com
DEV_MAILER_HOST={{projectName}}-mailhog
DEV_MAILER_PORT=8025
DEV_MAILER_USERNAME=
DEV_MAILER_PASSWORD=
{% endif %}

{% if hasElasticsearch %}
# LOCAL ELASTIC SEARCH ENGINE
# Edit the values from local Elastic Dashboard
APP_SEARCH_ENDPOINT="http://{{projectName}}-enterprisesearch:3002"
APP_SEARCH_API_KEY="private-insertcodehere"
APP_SEARCH_API_SEARCH_KEY="search-insertcodehere"
APP_SEARCH_ENGINE_PREFIX="engine-prefix-populate"
{% endif %}
